# Configure npm for Vercel build environment
target_platform=linux
target_arch=x64
target_libc=glibc

# Skip optional dependencies that might cause issues
optional=false

# Disable native modules that cause issues
rollup_use_native=false
native_binary_host_mirror=https://registry.npmmirror.com/-/binary

# Force use of pure JavaScript implementations
prefer_offline=true 